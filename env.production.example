# Production Environment Variables
NODE_ENV=production

# Database (Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_production_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_role_key

# Stripe
STRIPE_SECRET_KEY=your_production_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_production_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_production_stripe_webhook_secret

# NextAuth (for wallet authentication)
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_production_nextauth_secret

# WalletConnect
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Database (if using PostgreSQL with Docker)
DB_PASSWORD=your_secure_database_password

# Optional: Firebase (if using Firebase features)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id

# Optional: Google AI (for Genkit)
GOOGLE_AI_API_KEY=your_google_ai_api_key

# Security
ENCRYPTION_SECRET=your_32_character_encryption_secret

# Monitoring & Analytics
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Rate Limiting
REDIS_URL=redis://redis:6379

# Logging
LOG_LEVEL=info 